generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Story {
  id        Int      @id @default(autoincrement())
  judul     String   @db.VarChar(255)
  penulis   String   @db.VarChar(255)
  sinopsis  String
  sampul    String  
  kategori  Kategori
  tags      Tag[]
  chapters  Chapter[]
  status    Status
}

model Tag {
  id     Int    @id @default(autoincrement())
  name   String @db.VarChar(50)
  story  Story? @relation(fields: [storyId], references: [id])
  storyId Int?
}

enum Kategori {
  FINANSIAL
  TEKNOLOGI
  KESEHATAN
}

enum Status {
  TERBIT
  DRAF
}

model Chapter {
  id             Int    @id @default(autoincrement())
  title          String
  story          String
  storyId        Int
  storyRelation  Story  @relation(fields: [storyId], references: [id])
}